{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es6", "es2021"],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@components/*": ["src/components/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@types/*": ["src/types/*"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["**/*"],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "./build/**/*",
    "./babel.config.js",
    "gulpfile.js"
  ]
}
