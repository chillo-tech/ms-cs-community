{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@suggestion/*": ["components/suggestion/*"],
      "@constants/*": ["constants/*"],
      "@components/*": ["components/*"],
      "@middlewares/*": ["middlewares/*"],
      "@types/*": ["types/*"],
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "./dist/**/*", "./build/**/*"]
}