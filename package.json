{
  "name": "server",
  "version": "1.0.0",
  "description": "Created with create-node-express-ts by BrightkyEfoo",
  "main": "./build/src/app.js",
  "scripts": {
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "build": "rimraf build && npx tsc && npm run copy-html-files && npm run copy-views-files",
    "copy-html-files": "copyfiles -u 3 src/constants/mail/*.html build/src/constants/mail/",
    "copy-views-files": "copyfiles -u 2 src/views/**/*.hbs build/src/views/",
    "prestart": "npm run lint && npm run build && npm run copy-html-files && npm run copy-views-files",
    "start": "node build/src/app.js",
    "clean": "rimraf build/",
    "test": "cross-env NODE_ENV=test jest --testTimeout=50000 --detectOpenHandles",
    "dev": "nodemon --exec \"npm run build && npm run start\" --watch src --ext ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.14.0",
    "@types/config": "^3.3.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.10",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "nodemailer-brevo-transport": "^2.1.0",
    "zod": "^3.22.4"
  },
  "_moduleAliases": {
    "@suggestion": "build/src/components/suggestion",
    "@constants": "build/src/constants",
    "@components": "build/src/components",
    "@middlewares": "build/src/middlewares",
    "@types": "build/src/types",
    "@entities": "build/src/entities",
    "@services": "build/src/services",
    "@utils": "build/src/utils"
  }
}
